<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitleCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_categories_title_margin_top"
            android:text="@string/income_title"
            android:textAppearance="@style/OverlineTextStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/incEmptyCategories"
                layout="@layout/item_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:overScrollMode="never"
                android:paddingHorizontal="@dimen/dialog_categories_rv_pad_hor"
                android:paddingTop="@dimen/dialog_categories_rv_pad_top"
                android:paddingBottom="@dimen/dialog_categories_rv_pad_bottom"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddNewCategories"
            style="@style/OutlineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dialog_categories_btn_add_new_margin_bottom"
            android:text="@string/expense_add_new_category"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

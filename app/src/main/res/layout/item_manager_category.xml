<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_manager_category_margin_start"
    android:layout_marginEnd="@dimen/item_manager_category_margin_end"
    android:layout_marginBottom="@dimen/item_manager_category_margin_bottom"
    app:cardCornerRadius="@dimen/item_manager_category_corner"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/llColumnManagerCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivManagerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:src="@drawable/ic_groceries" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNameManagerCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/item_manager_category_name_margin_start"
            android:layout_weight="1"
            android:textAppearance="@style/Body2Style"
            android:textColor="@color/black"
            tools:text="Groceries" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditManagerCategory"
            style="@style/Only.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/item_manager_category_btn_edit_padding"
            android:text="@string/manager_categories_edit"
            android:textColor="@color/blue_600" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDragAndDropManagerCategory"
            style="@style/Only.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/item_manager_category_btn_drag_and_drop_padding"
            app:icon="@drawable/ic_drag_and_drop" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
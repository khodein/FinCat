<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/item_status_root_corner"
    app:cardElevation="0dp"
    app:strokeColor="@color/grey_300"
    app:strokeWidth="@dimen/item_status_root_stroke">

    <LinearLayout
        android:id="@+id/llRowStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/item_status_ll_row_pad_hor"
        android:paddingVertical="@dimen/item_status_ll_row_pad_ver">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="@dimen/item_status_min_width_first"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_expense" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtExpenseStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_status_txt_expense_mar_top"
                android:textAppearance="@style/ButtonTextStyle"
                android:textColor="@color/red_600"
                tools:text="12,000" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="@string/status_expenses"
                android:textAppearance="@style/CaptionStyle"
                android:textColor="@color/grey_700" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="@dimen/item_status_min_width_second"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_balance" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtBalanceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_status_txt_balance_mar_top"
                android:textAppearance="@style/ButtonTextStyle"
                android:textColor="@color/green_600"
                tools:text="12,000" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="@string/status_balance"
                android:textAppearance="@style/CaptionStyle"
                android:textColor="@color/grey_700" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="@dimen/item_status_min_width_second"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_income" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtIncomeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_status_txt_income_mar_top"
                android:textAppearance="@style/ButtonTextStyle"
                android:textColor="@color/grey_900"
                tools:text="12,000" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="@string/status_income"
                android:textAppearance="@style/CaptionStyle"
                android:textColor="@color/grey_700" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minWidth="@dimen/item_status_min_width_first"
            android:layout_height="match_parent" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
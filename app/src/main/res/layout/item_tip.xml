<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/item_tip_root_corner"
    app:strokeWidth="@dimen/item_tip_root_stroke"
    android:layout_marginEnd="@dimen/item_tip_root_margin_end"
    app:strokeColor="@color/grey_400"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/llColumnTip"
        android:paddingHorizontal="@dimen/item_tip_column_pad_hor"
        android:paddingVertical="@dimen/item_tip_column_pad_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIconTip"
            android:layout_width="@dimen/item_tip_size"
            android:layout_height="@dimen/item_tip_size"
            tools:src="@drawable/ic_groceries" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNameTip"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/item_tip_name_pad_start"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Body2Style"
            android:textColor="@color/grey_800"
            tools:ignore="RtlSymmetry"
            tools:text="Groceries"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
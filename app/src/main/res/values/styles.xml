<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  DividersStyles  -->
    <style name="DividerStyle">
        <item name="dividerColor">@color/grey_300</item>
    </style>
    <!--  /DividersStyles  -->

    <!--  ToolbarStyles  -->
    <style name="Expense.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleCentered">false</item>
        <item name="subtitleCentered">true</item>
        <item name="android:elevation">0dp</item>
        <item name="navigationIconTint">@color/grey_800</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/Subtitle1Style</item>
    </style>
    <!--  /ToolbarStyles  -->

    <!--  ButtonStyles  -->
    <style name="Only.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:backgroundTint">@color/background_button_enabled</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:stateListAnimator">@animator/btn_animator</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="OutlineButton" parent="DefaultButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/blue_600</item>
        <item name="strokeColor">@color/grey_400</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@color/blue_500</item>
        <item name="android:minHeight">32dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Only.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="rippleColor">@color/grey_200</item>
    </style>
    <!--  /ButtonStyles  -->

    <!--  TextInputLayoutStyles  -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/background_text_input_layout</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="hintTextAppearance">@style/CaptionStyle</item>
    </style>

    <style name="DropDownTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/background_text_input_layout</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="hintTextAppearance">@style/CaptionStyle</item>
    </style>

    <style name="SearchTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/grey_700</item>
        <item name="hintTextAppearance">@style/Body2Style</item>
    </style>
    <!--  /TextInputLayoutStyles  -->

    <!--  TextEditTextStyles  -->
    <style name="TextEditTextStyle">
        <item name="android:textAppearance">@style/Body1Style</item>
        <item name="android:textColorHint">@color/grey_700</item>
    </style>

    <style name="SearchTextEditTextStyle" parent="TextEditTextStyle">
        <item name="android:textAppearance">@style/Body2Style</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--  /TextEditTextStyles  -->

    <!--  BottomSheetStyles -->
    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_slide_down</item>
    </style>
    <!--  /BottomSheetStyles -->

</resources>
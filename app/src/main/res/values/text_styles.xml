<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title1Style">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="Subtitle1Style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Body1Style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>
    
    <style name="Body2Style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="CaptionStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="OverlineTextStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="fontWeight">500</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="KeyboardCodeNumber">
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textAppearance">@style/Body2Style</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="Regular">
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Bold">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="ExtraBold">
        <item name="fontFamily">@font/inter_extrabold</item>
    </style>

    <style name="Medium">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Regular.14" parent="Regular">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="Regular.14.White" parent="Regular">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Regular.14.Blue600" parent="Regular">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/blue_600</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingHorizontal="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/setting_leading_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:tint="@color/grey_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/setting_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="@style/Regular.14"
        android:textColor="@color/grey_900"
        android:paddingHorizontal="8dp"
        android:textAlignment="gravity"
        android:gravity="start|center"
        tools:text="sdkllksdkldlkdsklds"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting_trailing_icon"
        app:layout_constraintStart_toEndOf="@+id/setting_leading_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setting_trailing_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:tint="@color/grey_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

</merge>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <TextView
        android:id="@+id/category_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:paddingBottom="8dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:textAppearance="@style/Regular.14.Overline"
        android:textColor="@color/grey_800"
        tools:text="SDSDDSDSDSDSDSD" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3" />

    <com.sergei.pokhodai.expensemanagement.uikit.button.ButtonItemView
        android:id="@+id/category_dialog_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center" />

    <com.sergei.pokhodai.expensemanagement.uikit.request.RequestItemView
        android:id="@+id/category_dialog_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>